<Window x:Class="ToursApp.LoginWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursApp"
        mc:Ignorable="d"
        Title="Вход" Height="600" Width="960"
        WindowState="Maximized">
    <Grid>

        <Image Source="/Resources/1639364401-1001-www.lookw.net.jpg" Stretch="UniformToFill"/>

        <Border Background="White" Opacity="0.95" Margin="0,20,20,20" CornerRadius="10" HorizontalAlignment="Right" Width="300">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Путешествуй по РОССИИ" FontSize="20" FontWeight="Bold" Foreground="#0066cc" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Войти в систему" FontSize="16" FontWeight="SemiBold" Foreground="Black" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Логин:" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Name="Login" Width="220" Height="30" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#d3d3d3"/>
                <TextBlock Text="Пароль:" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Name="Password" Width="220" Height="30" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#d3d3d3"/>
                <Button Content="Войти" Width="220" Height="35" Background="#f4a261" Foreground="White" 
                        FontSize="14" Click="Button_Click" Margin="0,0,0,20" BorderThickness="0"/>
                <TextBlock Text="Забыли пароль?" FontSize="12" Foreground="#0066cc" 
                           HorizontalAlignment="Center" MouseLeftButtonDown="ForgotPassword_Click"/>
                <TextBlock Text="Продолжить без входа" FontSize="12" Foreground="#0066cc" 
                           HorizontalAlignment="Center" Margin="0,5,0,0" MouseLeftButtonDown="ContinueWithoutLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
